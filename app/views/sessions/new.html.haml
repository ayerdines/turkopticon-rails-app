%span.title Please sign in to Turkopticon

= form_tag sessions_path do
  %p
    = label_tag :email, 'Email', class: 'block'
    = email_field_tag :email

  %p
    = label_tag :password, 'Password', class: 'block'
    = password_field_tag :password

  %p
    = submit_tag 'Login', class: [:control, :submit, :med]

  %p
    %span.block= link_to 'Forgot your password?', ''
    %span.block= link_to 'Don\'t have an account?', new_account_path