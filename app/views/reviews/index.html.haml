%span.title
  = @page[:location]
  = @page[:rname]
  %span.sub-title= semantic_params @page[:params]
.heading-bar
  = page_entries_info @page[:reviews], entry_name: 'review'
  = paginate @page[:reviews], window: 2
.row.th.flex
  .col-req Requester
  .col-stats.flex
    .col-ttc Time to Complete
    .col-pay
      HIT
      %span.block Pay
    .col-tta Time to Approve
  .col-review Review
%hr.divider

- @page[:reviews].each do |r|
  .row.tr.flex{class: "r-#{r.id}"}

    .col-req= render 'requester', r: r
    .col-stats.flex= render 'stats', r: r
    .col-review= render 'review', r: r, flaggers: r.flags.open.map(&:person_id)

  %hr.divider

= javascript_include_tag 'reviews/comments'
