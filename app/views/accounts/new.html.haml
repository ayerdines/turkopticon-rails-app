%span.title Create a new account

= form_for :person, url: { action: 'create' } do |f|
  %p
    =f.label :display_name, 'Username (optional)', class: [:block]
    =f.text_field :display_name
  %p
    =f.label :email, 'Email', class: [:required, :block]
    =f.email_field :email
  %p
    =f.label :password, 'Password', class: [:required, :block]
    =f.password_field :password
  %p
    =f.label :password_confirmation, 'Confirm password', class: [:required, :block]
    =f.password_field :password_confirmation
  %p
    =f.submit 'Submit', class: [:control, :submit, :med]
